{
  "schema_version": 1,

  "quilt_loader": {
    "group": "${mod_group}",
    "id": "${mod_id}",
    "version": "${mod_version}",

    "intermediate_mappings":"net.fabricmc:intermediary",

    "metadata": {
      "name": "${mod_name}",
      "description": "Adds an entity with pathfinding to Cosmic Reach.",
      "contributors": {
        "SDFTDusername": "Programmer",
        "Qualia91": "Code for A* search algorithm"
      },

      "contact": {
        "homepage": "https://example.com/",
        "issues": "https://codeberg.org/CRModders/cosmic-quilt-example/issues",
        "sources": "https://codeberg.org/CRModders/cosmic-quilt-example/"
      },

      "icon": "assets/pathfinding/icon.png"
    },

    "entrypoints": {
      "init": "com.sdftdusername.pathfinding.PathfindingMod"
    },

    "depends": [
      {
        "id": "cosmicquilt",
        "versions": "*"
      },
      {
        "id": "cosmicreach",
        "versions": "*"
      }
    ]
  },

  "mixin": "pathfinding.mixins.json"
}
